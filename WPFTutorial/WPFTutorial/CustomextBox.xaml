<Window x:Class="WPFTutorial.CustomextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial"
        xmlns:userControl="clr-namespace:WPFTutorial.View.UserControls"
        mc:Ignorable="d"
        Title="CustomextBox" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControl:ClearableTextboxUserControl Grid.Row="1" Width="250" Height="40" Placeholder="First Name"/>
        <userControl:ClearableTextboxUserControl Grid.Row="2" Width="250" Height="40" Placeholder="Last Name"/>
        <userControl:ClearableTextboxUserControl Grid.Row="3" Width="250" Height="40" Placeholder="Phone Number"/>
        <userControl:ClearableTextboxUserControl Grid.Row="4" Width="250" Height="40" Placeholder="Address"/>
    </Grid>
    
</Window>
